<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.mtv.com"
	    plugin="http://media.mtvnservices.com/mgid:uma:video:mtv.com"
			initialState="playing"
			version="1.0">
			
	<crop x="0" y="0" width="512" height="286" />
	
	<seekbar type="simple">
		<start x="62" y="290" />
		<end   x="387" y="290" />
		<played>
				<color rgb="4f4f4f" />
				<color rgb="616161" />
		</played>
	</seekbar>
	
	<!-- PLAYING -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="15" y="304" />
				<goto state="paused" />
			</action>
		</event>
		
		<!-- Video ends -->
		<event>
			<condition>
				<url matches="player/embed/AS3/endslate" />
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
	</state>
	
	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="15" y="304" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>
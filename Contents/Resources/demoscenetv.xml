<?xml version="1.0" encoding="UTF-8"?>
<site site="www.demoscene.tv" 
	plugin="http://www.demoscene.tv/images/_system/dtv_video_stream_manager/default/flash/mediaplayer316.swf"
	initialState="playing"
	version="1.0">
			
	<crop x="0" y="0" width="512" height="384" />
	
	<seekbar type="simple">
		<start x="60" y="392" />
		<end   x="414" y="392" />
		<played>
			<color rgb="000000" />
		</played>
	</seekbar>
	
	<!-- PLAYING -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="8" y="394" />
				<goto state="paused" />
			</action>
		</event>
	</state>
	
	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="8" y="394" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>
<?xml version="1.0" encoding="UTF-8"?>
<site site="http://.*\.bbc\.co\.uk/iplayer/(tv|radio).*(#Standard)?"
	agent="Mozilla/5.0 (Macintosh; U; Intel Mac OS X 10.6; en-US; rv:1.9.2.12) Gecko/20101026 Firefox/3.6.12"
	plugin=".*emp.swf"
	initialState="loading"
	version="6.0">

	<setCookie domain=".bbc.co.uk" path="/" name="BBCPGstat" secure="false" value="0%3A-"/>
	<setCookie domain=".bbc.co.uk" path="/iplayer" name="BBCiPlayer" secure="false" value="empsize%3Dsmall&amp;htl%3Dtrue"/>

	<crop x="0" y="0" width="0" height="0" />

	<state name="loading">
		<event>
			<condition>
				<frameLoaded />
			</condition>
			<action>
				<click x="1" y="1"/>
				<goto state="playing" />
			</action>
		</event>
	</state>
	
	<state name="playing">
		<event>
			<condition>
				<frameLoaded />
			</condition>
			<action>
				<!-- nothing to do here -->
			</action>
		</event>
	</state>

</site>
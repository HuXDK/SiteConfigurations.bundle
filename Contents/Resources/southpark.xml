<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.southparkstudios.com/episodes"
	    plugin="http://media.mtvnservices.com/mgid.*southparkstudios.com"
      initialState="playing"
			allowPopups="true"
			version="1.0">
			
	<crop x="0" y="0" width="768" height="430" />

	<seekbar type="simple">
		<start x="34" y="444" />
		<end   x="653" y="444" />
		<dead x="0" y="0" />
		<played>
				<color rgb="ffcc00" />
				<color rgb="ffffff" />
		</played>
	</seekbar>
	
	<!-- PLAYING -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="12" y="452" />
				<goto state="paused" />
			</action>
		</event>
		
		<!-- Video ends -->
		<event>
			<condition>
				<url matches="player/embed/AS3/endslate" />
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
	</state>
	
	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="12" y="452" />
				<click x="0" y="0" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>
<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.thedailyshow.com/full-episodes/"
	    plugin="http://media.mtvnservices.com/mgid:cms:fullepisode:comedycentral.com:*"
			initialState="playing"
			version="1.0">
			
	<crop x="0" y="0" width="640" height="480" />

	<seekbar type="simple">
		<start x="56" y="489" />
		<end   x="446" y="489" />
		<played>
			<color rgb="56b5d9" />
		</played>
	</seekbar>
				
<!-- Set Colors for Paused Video -->
    <condition name="paused">
			<and>
				<color x="17"  y="487" rgb="ffffff" />
                <color x="33"  y="495" rgb="ffffff" />
				<color x="17"  y="503" rgb="ffffff" />
			</and>
	</condition>
    
<!-- PLAYING -->
	<state name="playing">
		
<!-- Click to pause -->
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="25" y="500" />
			</action>
		</event>

<!-- Detect paused video -->
		<event>
			<condition>
				<condition name="paused" />
			</condition>
			<action>
				<goto state="paused" />
			</action>
		</event>
		
<!-- Video ends -->
		<event>
			<condition>
				<and>
					<color x="446" y="489" rgb="56b5d9" />
				</and>
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
	</state>
	
<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="25" y="500" />
			</action>
		</event>
        		
<!-- Go To Playing -->
		<event>
			<condition>
				<not>
					<condition name="paused" />
				</not>
			</condition>
			<action>
				<goto state="playing" />
            </action>
        </event>
        
	</state>
        
</site>
<?xml version="1.0" encoding="UTF-8"?>

<!-- Define SITE & FLASH-Player -->

<site	site		="http://rtl-now.rtl.de"
	plugin		="http://rtl-now.rtl.de/includes/rtlnow_videoplayer09_2*"
	initialState	="loading"
	version		="1.0">

<!-- Define FLASH Video size -->
<!--NOTE: We use NEGATIVE numbers in sizes & coordinates to measure relative to -->
<!--      the BOTTOM of the video, as we have to deal with TWO different sized flash-->

	<crop x="1" y="1" width="594" height="-36" />

<!-- Define Seekbar -->
<!-- Will make seekbar work with SMALL flash videos. as these are the most -->

	<seekbar type="thumb">
		<start x="123" y="-18" />
		<end   x="411" y="-18" />
		<played>
			<color rgb="c2c4c5" />
		</played>
	</seekbar>

<!-- Set Colors for Paused Video -->

	<condition name="paused">
		<color x="21"  y="-18" rgb="e3041a" />
	</condition>

<!-- Set Colors for Playing Video -->

	<condition name="laeuft">
		<color x="21"  y="-18" rgb="e5eaee" />
	</condition>

<!-- INITIALIZE -->
	<state name="loading">
		<event>

     			<condition>
				<condition name="paused" />
      			</condition>

     			 <action>
        			<click x="21" y="-18"/>
        			<goto state="playing"/>
      			</action>

    		</event>
	</state>
<!-- Video Started -->

<!-- PLAYING START -->
	<state name="playing">

	<!-- Click to pause -->
		<event>

			<condition>
				<command name="pause" />
			</condition>

			<action>
				<click x="21" y="-18" />
			</action>

		</event>

	<!-- Video ended -->
		<event>

			<condition>
				<or>
					<color x="411" y="-18" rgb="c2c4c5" />
				</or>
			</condition>

			<action>
				<goto state="end" />
			</action>

		</event>


	<!-- Detect paused video -->

		<event>

			<condition>
				<condition name="paused" />
			</condition>

			<action>
				<goto state="paused" />
			</action>

		</event>

	<!-- Video ends -->
		<event>

			<condition>
				<or>
					<color x="411" y="-18" rgb="c2c4c5" />
				</or>
			</condition>

			<action>
				<goto state="end" />
			</action>

		</event>

	</state>
<!-- PLAYING END -->

<!-- PAUSED START -->
	<state name="paused">
		<event>

			<condition>
				<command name="play" />
			</condition>

			<action>
				<click x="21" y="-18" />
			</action>

		</event>

	<!-- Go To Playing -->

		<event>

			<condition>
				<not>
					<condition name="paused" />
				</not>
			</condition>

			<action>
				<goto state="playing" />
			</action>

		</event>

	</state>
<!-- PAUSED END -->

</site>
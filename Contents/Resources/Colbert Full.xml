<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.colbertnation.com/full-episodes/"
	plugin="http://media.mtvnservices.com/.*episode"
	initialState="playing"
	version="2.0">

	<crop x="0" y="0" width="0" height="0" />

	<!-- PLAYING -->
	<state name="playing">
		<!-- Click to pause -->
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="5" y="5" />
			</action>
		</event>

		<!-- Video ends -->
		<event>
			<condition>
				<url matches="mtvnimages.com" />
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
	</state>

	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="5" y="5" />
			</action>
		</event>
	</state>

</site>
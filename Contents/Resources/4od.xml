<?xml version="1.0" encoding="UTF-8"?>
<site site="http://.*channel4.com" plugin="4odplayer.*swf" initialState="loading" version="1.0">			 

	<setCookie domain="www.channel4.com" path="/" name="cutvageconfirm" secure="false" value="1"/>
	<setCookie domain="www.channel4.com" path="/" name="C4AccessControlCookie" secure="false" value="%7B'allowedToWatch'%3A18%7D"/>
	
	<crop x="56" y="32" width="512" height="288" />	

	<seekbar type="simple">
		<start x="43" y="363" />
		<end  x="453" y="363" />
		<played>
		  <condition>
		    <not>
    		  <color rgb="ffffff"/>
		    </not>
		  </condition>
		</played>
	</seekbar>
	
	<condition name="paused">
    <and>
      <color x="7" y="360" rgb="ffffff" />
      <color x="7" y="365" rgb="ffffff" />
      <color x="11" y="363" rgb="ffffff" />
    </and>
  </condition>


	<state name="loading">
    <event>
      <condition>
        <and>
          <color x="305" y="170" rgb="ffffff"/>
          <color x="305" y="180" rgb="ffffff"/>
          <color x="315" y="175" rgb="ffffff"/>
        </and>
      </condition>
      <action>
        <click x="310" y="175"/>
        <goto state="playing"/>
      </action>
    </event>
	</state>

	<state name="playing">
    <event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="9" y="363" />
				<goto state="paused" />
			</action>
		</event>
		<event>
			<condition>
        <and>
          <color x="305" y="170" rgb="ffffff"/>
          <color x="305" y="180" rgb="ffffff"/>
          <color x="315" y="175" rgb="ffffff"/>
          <color x="320" y="160" op="dimmer-than" rgb="eeeeee"/>
          <color x="320" y="190" op="dimmer-than" rgb="eeeeee"/>
          <color x="295" y="175" op="dimmer-than" rgb="eeeeee"/>
        </and>
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
	</state>
	
	<state name="paused">
    <event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="9" y="363" />
				<goto state="playing" />
			</action>
		</event>
	</state>
	
</site>